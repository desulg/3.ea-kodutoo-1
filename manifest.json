{
  "manifest_version": 2, //Must be 2 (since january 2014)
  "name": "Oh Snap",
  "description": "Take screenshot and display in new tab",
  "version": "1.0.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Oh Snap!"
  },
  "permissions": ["activeTab"]
}